{
  "manifest_version": 3,
  "name": "Product Highlighter",
  "version": "1.1",
  "description": "Detects and highlights product information (title, image, price) on a webpage, then downloads it.",
  "permissions": [
    "activeTab",
    "scripting",
    "downloads"
  ],
  "action": {
    "default_popup": "popup.html"
    // "default_icon": {
    //   "16": "images/icon16.png",
    //   "48": "images/icon48.png",
    //   "128": "images/icon128.png"
    // }
  },
  "icons": {
    "16": "images/icon16.png",
    "48": "images/icon48.png",
    "128": "images/icon128.png"
  }
}